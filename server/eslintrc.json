{
  "env": { 
      "browser": true,
      "es2021": true 
  },

  "extends": [ 
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
  ],
  "parser": "babel-eslint", 
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 11, 
      "sourceType": "module" 
  },
  
  "plugins": [
      "react", 
      "prettier"
  ],
 
  "rules": {
      "prettier/prettier": "error", 
      "react/prop-types": 0,
      "singleQuote": true,
      "jsxSingleQuote": true,
      "arrowParens": "always",
      "max-len": ["error", 140, 2],
      "tabWidth": 2,
      "useTabs": false,
      "trailingComma": "all"
  }
}